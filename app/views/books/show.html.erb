<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%=render '/shared/left_col', user: @elem.user, book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
            <td>
              <%=link_to user_path(@elem.user) do%>
                <%= attachment_image_tag @elem.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40'%>
                <br>
                <%=@elem.user.name%>
              <%end%>
            </td>
            <td>
              <%=link_to @elem.title, book_path(@elem)%>
            </td>
            <td>
              <%=@elem.body%>
            </td>
            <%if @elem.user_id == current_user.id%>
            <td>
              <%=link_to 'Edit', edit_book_path(@elem), class: 'btn btn-sm btn-success'%>
            </td>
            <td>
              <%=link_to 'Destroy', book_path(@elem), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: '本当に消しますか？'}%>
            </td>
            <%end%>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>